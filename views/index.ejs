<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Create Account</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white antialiased">
  <main class="min-h-screen w-full flex items-center justify-center p-6">
    <section class="w-full max-w-lg">
      <header class="mb-8">
        <h1 class="text-3xl font-semibold tracking-tight">Create Account</h1>
        <p class="text-zinc-400 mt-2 text-sm">Join in a minute. All fields are required.</p>
      </header>

      <form action="/register" method="post" class="grid gap-4 bg-zinc-950/40 backdrop-blur rounded-xl p-6 border border-zinc-800">
        <!-- Full Name -->
        <div class="grid gap-2">
          <label for="name" class="text-sm text-zinc-300">Full Name</label>
          <input
            id="name"
            name="name"
            type="text"
            placeholder="John Doe"
            required
            class="px-3 py-2 bg-transparent border-2 border-zinc-800 rounded-md outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/30"
            autocomplete="name"
          />
        </div>

        <!-- Username -->
        <div class="grid gap-2">
          <label for="username" class="text-sm text-zinc-300">Username</label>
          <input
            id="username"
            name="username"
            type="text"
            placeholder="johndoe"
            required
            class="px-3 py-2 bg-transparent border-2 border-zinc-800 rounded-md outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/30"
            autocomplete="username"
          />
        </div>

        <!-- Password -->
        <div class="grid gap-2">
          <label for="password" class="text-sm text-zinc-300">Password</label>
          <input
            id="password"
            name="password"
            type="password"
            placeholder="••••••••"
            required
            minlength="8"
            class="px-3 py-2 bg-transparent border-2 border-zinc-800 rounded-md outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/30"
            autocomplete="new-password"
          />
          <p class="text-xs text-zinc-500">Use at least 8 characters, including a number and a symbol.</p>
        </div>

        <!-- Email -->
        <div class="grid gap-2">
          <label for="email" class="text-sm text-zinc-300">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            placeholder="john@example.com"
            required
            class="px-3 py-2 bg-transparent border-2 border-zinc-800 rounded-md outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/30"
            autocomplete="email"
          />
        </div>

        <!-- Age -->
        <div class="grid gap-2">
          <label for="age" class="text-sm text-zinc-300">Age</label>
          <input
            id="age"
            name="age"
            type="number"
            min="13"
            placeholder="18"
            required
            class="px-3 py-2 bg-transparent border-2 border-zinc-800 rounded-md outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/30"
            inputmode="numeric"
          />
        </div>

        <!-- Actions -->
        <div class="mt-2 flex items-center gap-3">
          <button
            type="submit"
            class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 active:bg-blue-700 rounded-md font-medium transition-colors"
          >
            Create Account
          </button>

          <!-- Go to Login -->
          <a
            href="/login"
            class="px-5 py-2.5 bg-transparent border-2 border-zinc-700 hover:border-zinc-600 text-zinc-200 rounded-md transition-colors"
            aria-label="Go to Login"
          >
            Go to Login
          </a>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
